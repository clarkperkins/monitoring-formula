{%- set hostname = salt['mine.get']('G@stack_id:' ~ grains.stack_id ~ ' and G@roles:monitor.sensu.server', 'grains.items', 'compound').values()[0]['fqdn'] -%}
{
  "rabbitmq": {
    "ssl": {
      "cert_chain_file": "/etc/sensu/ssl/cert.pem",
      "private_key_file": "/etc/sensu/ssl/key.pem"
    },
    "host": "{{ hostname }}",
    "port": 5671,
    "vhost": "{{ pillar.monitor.sensu.rabbitmq.vhost }}",
    "user": "{{ pillar.monitor.sensu.rabbitmq.username }}",
    "password": "{{pillar.monitor.sensu.rabbitmq.password}}"
  }
}
