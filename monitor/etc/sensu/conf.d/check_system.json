{# This is a basic set of system checks that should work and be relevant on any system. #}
{
  "checks": {
    "load_check": {
      "handlers": ["default"],
      "command": "/etc/sensu/plugins/check-load.rb",
      "interval": 60,
      "subscribers": [ "all" ]
    },
    "mem_check": {
      "handlers": ["default"],
      "command": "/etc/sensu/plugins/check-mem.sh",
      "interval": 60,
      "subscribers": [ "all" ]
    },
    "disk_metrics": {
      "handlers": ["graphite-tcp"],
      "type": "metric",
      "command": "/etc/sensu/plugins/disk-usage-metrics.rb --scheme sensu.:::name:::",
      "interval": 60,
      "subscribers": [ "all" ]
    },
    "vmstat_metrics": {
      "handlers": ["graphite-tcp" ],
      "type": "metric",
      "command": "/etc/sensu/plugins/vmstat-metrics.rb --scheme sensu.:::name:::",
      "interval": 60,
      "subscribers": [ "all" ]
    }
  }
}

